# Analytics Engine Environment Configuration
# Copy to .env and fill in actual values

# ============================================
# Application Settings
# ============================================
APP_NAME=AcademicAnalyticsEngine
APP_ENV=development
APP_DEBUG=true
APP_VERSION=1.0.0
APP_HOST=0.0.0.0
APP_PORT=8001

# ============================================
# MongoDB Atlas Configuration (Primary Database)
# ============================================
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/academic
MONGODB_DATABASE=academic
MONGODB_MIN_POOL_SIZE=5
MONGODB_MAX_POOL_SIZE=50

# ============================================
# Redis Configuration (Optional - for caching)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1
REDIS_URL=redis://localhost:6379/1

# ============================================
# Node.js Backend Connection
# ============================================
BACKEND_API_URL=http://localhost:3000/api/v1
BACKEND_API_KEY=your_internal_api_key

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/analytics.log

# ============================================
# Analytics Configuration
# ============================================
ANALYTICS_BATCH_SIZE=100
ANALYTICS_CACHE_TTL=3600
MIN_ATTEMPTS_FOR_TREND=3
LEARNING_GAP_THRESHOLD=50

# ============================================
# Performance Settings
# ============================================
WORKER_CONCURRENCY=4
TASK_TIMEOUT=300
MEMORY_LIMIT_MB=1024

# ============================================
# Security
# ============================================
API_KEY=your_api_key_for_internal_communication
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
